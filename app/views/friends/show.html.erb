<p style="color: green"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name + ' ' + @friend.last_name %></h5>
    <p class="card-text">
    Email: <%= @friend.email %> <br/>
    Phone: <%= @friend.phone %> <br/>
    Instagram: <%= @friend.instagram %>
    </p>
    <br/>
    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-secondary" %> 
    <%= link_to "Back", friends_path, class: "btn btn-dark" %>
    <br/>
    <br/>
    <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-outline-danger btn-sm" %>
</div>
