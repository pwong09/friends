<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table class="table table-striped table-hover">
<thead class="table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>

    <tr>    
      <td>
        <%= friend.first_name + ' ' + friend.last_name %>
      </td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.instagram %></td>
      <td>
        <%= link_to "Show", friend, method: :show, class: "btn btn-secondary btn-sm" %>
        <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary btn-sm" %> 
        <%= link_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
